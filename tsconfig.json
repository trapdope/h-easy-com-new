{
  "compilerOptions": {
    // 编译后的模块系统
    "module": "ESNext",
    // 不生成类型声明文件
    "declaration": false,
    // 不强制检查隐式 any 类型
    "noImplicitAny": true,
    // 删除编译后的注释
    "removeComments": true,
    // 使用 Node.js 模块解析策略
    "moduleResolution": "node",
    // 使用 import * as x from "y" 形式的导入语法
    "esModuleInterop": true,
    // 保留 JSX 标签
    "jsx": "preserve",
    // 不包含默认的 lib 库文件
    "noLib": false,
    // 编译目标为 ES6
    "target": "ES6",
    // 生成 source map 文件
    "sourceMap": true,
    // 包含的库文件
    "lib": ["ESNext", "DOM"],
    // 允许默认导入语法
    "allowSyntheticDefaultImports": true,
    // 启用装饰器支持
    "experimentalDecorators": true,
    // 强制文件名的大小写一致性检查
    "forceConsistentCasingInFileNames": true,
    // 解析 JSON 模块
    "resolveJsonModule": true,
    // 启用所有严格类型检查选项
    "strict": true,
    // 跳过库文件的类型检查
    "skipLibCheck": true
  },
  // 需要排除的文件夹
  "exclude": ["node_modules", "dist/**", "**/__tests__"]
}
